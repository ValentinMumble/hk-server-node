{
  "name": "hk-server-node",
  "description": "HK Server",
  "repository": {
    "type": "git",
    "url": "git@github.com:ValentinMumble/hk-server-node.git"
  },
  "version": "0.1.0",
  "main": "index.js",
  "author": "Valentin Dijkstra",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "esm": "^3.2.25",
    "express": "^4.16.1",
    "node-hue-api": "^2.4.6",
    "socket.io": "^2.2.0",
    "spotify-connect-ws": "https://github.com/ValentinMumble/spotify-connect-ws.git",
    "spotify-web-api-node": "^4.0.0"
  },
  "scripts": {
    "postinstall": "cd ./node_modules/spotify-connect-ws && yarn install && yarn build",
    "start": "node ./index.js",
    "start-forever": "forever start -a --uid $npm_package_name index.js",
    "stop-forever": "forever stop $npm_package_name",
    "upload": "export $(cat .env | grep PKG | xargs) && rsync --copy-links --exclude=\".git\" -avz -e 'ssh' ./ $PKG_DEPLOY_HOST:$PKG_DEPLOY_PATH",
    "deploy": "export $(cat .env | grep PKG | xargs) && yarn upload && ssh $PKG_DEPLOY_HOST \"cd $PKG_DEPLOY_PATH && yarn stop-forever ; yarn start-forever\""
  }
}
