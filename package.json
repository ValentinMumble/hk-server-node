{
  "name": "hk-server-node",
  "description": "HK Server",
  "repository": {
    "type": "git",
    "url": "git@github.com:ValentinMumble/hk-server-node.git"
  },
  "version": "0.1.0",
  "main": "index.ts",
  "author": "Valentin Dijkstra",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.16.1",
    "genius-lyrics-api": "^3.0.6",
    "node-hue-api": "^4.0.9",
    "socket.io": "^4.0.0",
    "spotify-web-api-node": "^5.0.2",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "build": "yarn tsc",
    "start-forever": "forever start -a --uid $npm_package_name build/index.js",
    "stop-forever": "forever stop $npm_package_name",
    "upload": "export $(cat .env | grep PKG | xargs) && yarn build && rsync --copy-links -avz -e 'ssh' ./build .env node_modules $PKG_DEPLOY_HOST:$PKG_DEPLOY_PATH",
    "deploy": "export $(cat .env | grep PKG | xargs) && yarn upload && ssh $PKG_DEPLOY_HOST \"cd $PKG_DEPLOY_PATH && yarn stop-forever ; yarn start-forever\""
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.35",
    "@types/node-hue-api": "^2.3.0",
    "@types/spotify-web-api-node": "^5.0.2"
  }
}
