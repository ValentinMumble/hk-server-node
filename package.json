{
  "name": "hk-server-node",
  "description": "HK Server",
  "repository": {
    "type": "git",
    "url": "git@github.com:ValentinMumble/hk-server-node.git"
  },
  "version": "0.1.0",
  "main": "index.js",
  "author": "Valentin Dijkstra",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "esm": "^3.2.25",
    "express": "^4.16.1",
    "node-hue-api": "^2.4.6",
    "socket.io": "^2.2.0",
    "spotify-connect-ws": "https://github.com/ValentinMumble/spotify-connect-ws.git",
    "spotify-web-api-node": "^4.0.0"
  },
  "deployPath": "/home/pi/hk/hk-server-node",
  "scripts": {
    "postinstall": "cd ./node_modules/spotify-connect-ws && yarn install && yarn build",
    "start": "node ./index.js",
    "start-forever": "forever start -a --uid $npm_package_name index.js",
    "stop-forever": "forever stop $npm_package_name",
    "upload": "rsync -avz -e 'ssh' ./ pi@vmumble.ddns.net:$npm_package_deployPath",
    "deploy": "npm run-script upload && ssh pi@vmumble.ddns.net \"cd $npm_package_deployPath && npm run-script stop-forever ; npm run-script start-forever\""
  }
}